// Initialize deliveries component
function initDeliveries() {
    // Add event listeners for filtering and sorting
    const viewModeSelect = document.getElementById('deliveryViewMode');
    const sortOrderSelect = document.getElementById('deliverySortOrder');
    const searchInput = document.getElementById('deliverySearch');
    
    if (viewModeSelect) {
        viewModeSelect.addEventListener('change', function() {
            renderDeliveries();
        });
    }
    
    if (sortOrderSelect) {
        sortOrderSelect.addEventListener('change', function() {
            renderDeliveries();
        });
    }
    
    if (searchInput) {
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const deliveryCards = document.querySelectorAll('.delivery-card');
            
            deliveryCards.forEach(card => {
                const cardText = card.textContent.toLowerCase();
                if (cardText.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    }
    
    // Initialize status tabs
    initDeliveryStatusTabs();
    
    // Initial render
    renderDeliveries();
}

// Update saveDataToLocalStorage to include deliveries
const originalSaveDataFn = saveDataToLocalStorage;
saveDataToLocalStorage = function() {
    // Call original function
    originalSaveDataFn();
    
    // Add deliveries to localStorage
    localStorage.setItem('deliveries', JSON.stringify(deliveries));
};

// Update loadDataFromLocalStorage to include deliveries
const originalLoadDataFn = loadDataFromLocalStorage;
loadDataFromLocalStorage = function() {
    // Call original function
    originalLoadDataFn();
    
    try {
        // Get deliveries from localStorage
        const storedDeliveries = localStorage.getItem('deliveries');
        if (storedDeliveries) {
            const parsedDeliveries = JSON.parse(storedDeliveries);
            if (Array.isArray(parsedDeliveries)) {
                deliveries = parsedDeliveries;
            } else {
                console.error('Stored deliveries is not an array, using empty array');
                deliveries = [];
            }
        }
    } catch (error) {
        console.error('Error loading deliveries from localStorage:', error);
        deliveries = [];
    }
    
    // Initialize deliveries if on that tab
    if (document.querySelector('#deliveries').classList.contains('active')) {
        initDeliveries();
    }
};

