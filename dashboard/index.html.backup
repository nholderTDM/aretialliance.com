    const addDeliveryBtn = document.getElementById('addDeliveryBtn');
    const cancelDeliveryBtn = document.getElementById('cancelDeliveryBtn');
    const saveDeliveryBtn = document.getElementById('saveDeliveryBtn');
    
    // Initialize delivery tab navigation
    function initDeliveryTabs() {
        const tabLinks = document.querySelectorAll('.delivery-tab-link');
        const tabContents = document.querySelectorAll('.delivery-tab-content');
        
        tabLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Remove active class from all tabs
                tabLinks.forEach(tab => {
                    tab.classList.remove('active', 'border-blue-600', 'text-blue-600');
                    tab.classList.add('border-transparent', 'hover:text-gray-600', 'hover:border-gray-300');
                });
                
                tabContents.forEach(content => {
                    content.classList.add('hidden');
                });
                
                // Add active class to current tab
                this.classList.add('active', 'border-blue-600', 'text-blue-600');
                this.classList.remove('border-transparent', 'hover:text-gray-600', 'hover:border-gray-300');
                
                const tabId = this.getAttribute('data-tab');
                document.getElementById(tabId).classList.remove('hidden');
            });
        });
    }
    
    // Add event listeners
    if (addDeliveryBtn) {
        addDeliveryBtn.addEventListener('click', function() {
            document.getElementById('deliveryForm').classList.remove('hidden');
            document.getElementById('deliveriesList').classList.add('hidden');
            initDeliveryTabs();
        });
    }
    
    if (cancelDeliveryBtn) {
        cancelDeliveryBtn.addEventListener('click', function() {
            document.getElementById('deliveryForm').classList.add('hidden');
            document.getElementById('deliveriesList').classList.remove('hidden');
        });
    }
    
    if (saveDeliveryBtn) {
        saveDeliveryBtn.addEventListener('click', function() {
            // Simple validation
            const requiredFields = [
                'deliveryType', 'deliveryCustomer', 'deliveryDate',
                'pickupAddress', 'pickupCity', 'pickupState', 'pickupZip',
                'deliveryAddress', 'deliveryCity', 'deliveryState', 'deliveryZip'
            ];
            
            let isValid = true;
            requiredFields.forEach(field => {
                const input = document.getElementById(field);
                if (input && !input.value) {
                    input.classList.add('border-red-500');
                    isValid = false;
                } else if (input) {
                    input.classList.remove('border-red-500');
                }
            });
            
            if (!isValid) {
                alert('Please fill in all required fields');
                return;
            }
            
            // In a real implementation, this would save the delivery data
            alert('Delivery saved successfully!');
            
            // Hide the form and show the list
            document.getElementById('deliveryForm').classList.add('hidden');
            document.getElementById('deliveriesList').classList.remove('hidden');
        });
    }
    
    // Handle package add/remove
    const addPackageBtn = document.getElementById('addPackageBtn');
    if (addPackageBtn) {
        addPackageBtn.addEventListener('click', function() {
            const packageTableBody = document.getElementById('packageTableBody');
            const newRow = packageTableBody.querySelector('tr').cloneNode(true);
            
            // Reset inputs in the cloned row
            newRow.querySelectorAll('input').forEach(input => {
                if (input.type === 'number' && input.classList.contains('package-quantity')) {
                    input.value = '1';
                } else {
                    input.value = '';
                }
            });
            
            // Set up remove button
            const removeBtn = newRow.querySelector('.remove-package');
            removeBtn.addEventListener('click', function() {
                if (packageTableBody.querySelectorAll('tr').length > 1) {
                    packageTableBody.removeChild(newRow);
                }
            });
            
            packageTableBody.appendChild(newRow);
        });
    }
    
    // Set up remove button for initial package row
    const initialRemoveBtn = document.querySelector('.remove-package');
    if (initialRemoveBtn) {
        initialRemoveBtn.addEventListener('click', function() {
            const packageTableBody = document.getElementById('packageTableBody');
            if (packageTableBody.querySelectorAll('tr').length > 1) {
                packageTableBody.removeChild(this.closest('tr'));
            }
        });
    }
    
    // Initialize tabs when clicking the deliveries nav link
    const deliveriesNavLink = document.querySelector('.tab-link[data-tab="deliveries"]');
    if (deliveriesNavLink) {
        deliveriesNavLink.addEventListener('click', function() {
            setTimeout(function() {
                // If delivery form is visible, initialize tabs
                if (!document.getElementById('deliveryForm').classList.contains('hidden')) {
                    initDeliveryTabs();
                }
            }, 100);
        });
    }
});
