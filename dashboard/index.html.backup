    // Populate customers dropdown with contacts and organizations
function populateCustomersDropdown() {
    const dropdown = document.getElementById('deliveryCustomer');
    
    // Clear current options (except the first one)
    while (dropdown.options.length > 1) {
        dropdown.remove(1);
    }
    
    // Add organizations
    const organizations = JSON.parse(localStorage.getItem('organizations') || '[]');
    
    if (organizations.length > 0) {
        const orgGroup = document.createElement('optgroup');
        orgGroup.label = 'Organizations';
        
        organizations.forEach(org => {
            const option = document.createElement('option');
            option.value = 'org_' + org.id;
            option.textContent = org.name;
            orgGroup.appendChild(option);
        });
        
        dropdown.appendChild(orgGroup);
    }
    
    // Add individual contacts
    const contacts = JSON.parse(localStorage.getItem('contacts') || '[]');
    const individualContacts = contacts.filter(c => !c.relatedOrganizationId);
    
    if (individualContacts.length > 0) {
        const contactGroup = document.createElement('optgroup');
        contactGroup.label = 'Individual Contacts';
        
        individualContacts.forEach(contact => {
            const option = document.createElement('option');
            option.value = 'contact_' + contact.id;
            option.textContent = contact.name;
            contactGroup.appendChild(option);
        });
        
        dropdown.appendChild(contactGroup);
    }
}

// Update contacts dropdown based on selected organization
function updateContactsDropdown() {
    const customerValue = document.getElementById('deliveryCustomer').value;
    const contactDropdown = document.getElementById('deliveryContact');
    
    // Clear current options (except the first one)
    while (contactDropdown.options.length > 1) {
        contactDropdown.remove(1);
    }
    
    // If an organization is selected, populate with its contacts
    if (customerValue && customerValue.startsWith('org_')) {
        const orgId = customerValue.replace('org_', '');
        const contacts = JSON.parse(localStorage.getItem('contacts') || '[]');
        const orgContacts = contacts.filter(c => c.relatedOrganizationId === orgId);
        
        orgContacts.forEach(contact => {
            const option = document.createElement('option');
            option.value = contact.id;
            option.textContent = contact.name;
            contactDropdown.appendChild(option);
        });
    }
}

