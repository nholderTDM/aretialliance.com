                                    <button id="addContactBtn" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                                        Add Contact
                                    </button>
                                </div>
                                
                                <div id="contactForm" class="hidden mb-6 bg-gray-50 p-4 rounded border">
                                    <h3 class="text-lg font-medium mb-4" id="contactFormTitle">Add New Contact</h3>
                                    
                                    <!-- Basic Info Tab -->
                                    <div class="mb-4 border-b border-gray-200">
                                        <ul class="flex flex-wrap -mb-px text-sm font-medium text-center">
                                            <li class="mr-2">
                                                <a href="#" class="contact-tab-link active inline-block p-4 border-b-2 border-blue-600 text-blue-600" data-tab="basic-info">Basic Info</a>
                                            </li>
                                            <li class="mr-2">
                                                <a href="#" class="contact-tab-link inline-block p-4 border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300" data-tab="lead-info">Lead Details</a>
                                            </li>
                                            <li class="mr-2">
                                                <a href="#" class="contact-tab-link inline-block p-4 border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300" data-tab="relationships">Relationships</a>
                                            </li>
                                        </ul>
                                    </div>
                                    
                                    <!-- Basic Info Content -->
                                    <div id="Basic Info" class="delivery-tab-content active">
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                                    Delivery ID *
                                                </label>
                                                <input
                                                    type="text"
                                                    id="deliveryId"
                                                    class="w-full px-3 py-2 border rounded"
                                                    readonly
                                                    value="D-23041"
                                                />
                                                <p class="text-xs text-gray-500 mt-1">Auto-generated</p>
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                                    Delivery Type *
                                                </label>
                                                <select
                                                    id="deliveryType"
                                                    required
                                                    class="w-full px-3 py-2 border rounded"
                                                >
                                                    <option value="">Select Type</option>
                                                    <option value="standard">Standard Delivery</option>
                                                    <option value="same-day">Same Day Delivery</option>
                                                    <option value="express">Express (1-2 hrs)</option>
                                                    <option value="scheduled">Scheduled Delivery</option>
                                                    <option value="bulk">Bulk Shipment</option>
                                                </select>
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                                    Customer/Organization *
                                                </label>
                                                <select
                                                    id="deliveryCustomer"
                                                    required
                                                    class="w-full px-3 py-2 border rounded"
                                                >
                                                    <option value="">Select Customer</option>
                                                    <!-- Will be populated dynamically -->
                                                </select>
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                                    Contact Person
                                                </label>
                                                <select
                                                    id="deliveryContact"
                                                    class="w-full px-3 py-2 border rounded"
                                                >
                                                    <option value="">Select Contact</option>
                                                    <!-- Will be populated dynamically -->
                                                </select>
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                                    Scheduled Date *
                                                </label>
                                                <input
                                                    type="date"
                                                    id="deliveryDate"
                                                    required
                                                    class="w-full px-3 py-2 border rounded"
                                                />
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                                    Time Window
                                                </label>
                                                <div class="grid grid-cols-2 gap-2">
                                                    <input
                                                        type="time"
                                                        id="deliveryTimeStart"
                                                        class="w-full px-3 py-2 border rounded"
                                                        placeholder="Start"
                                                    />
                                                    <input
                                                        type="time"
                                                        id="deliveryTimeEnd"
                                                        class="w-full px-3 py-2 border rounded"
                                                        placeholder="End"
                                                    />
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="mb-4">
                                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                                Special Instructions
                                            </label>
                                            <textarea
                                                id="deliveryInstructions"
                                                rows="3"
                                                class="w-full px-3 py-2 border rounded"
                                            ></textarea>
                                        </div>
                                    </div>
                                    
                                    <!-- Lead Details Content -->
                                    <div id="lead-info" class="contact-tab-content hidden">
