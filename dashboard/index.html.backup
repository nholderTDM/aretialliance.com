// Function to render pipeline cards
function renderPipelineCards(stageContacts) {
    if (!stageContacts || stageContacts.length === 0) {
        return `<div class="text-gray-400 text-sm text-center py-4">No contacts</div>`;
    }
    
    let cardsHTML = '';
    
    // Limit to top 5 cards per stage (sorted by lead score)
    stageContacts
        .sort((a, b) => (b.leadScore || 0) - (a.leadScore || 0))
        .slice(0, 5)
        .forEach(contact => {
            cardsHTML += `
                <div class="pipeline-card" data-id="${contact.id}">
                    <div class="flex justify-between">
                        <span class="font-medium">${contact.name}</span>
                        <span class="text-sm ${contact.leadScore >= 70 ? 'text-green-600' : contact.leadScore >= 40 ? 'text-yellow-600' : 'text-gray-600'}">${contact.leadScore || 0}</span>
                    </div>
                    <div class="text-xs text-gray-500">${contact.company || 'Individual'}</div>
                    <div class="text-xs flex justify-between items-center mt-2">
                        <span>${contact.nextFollowUpDate ? new Date(contact.nextFollowUpDate).toLocaleDateString() : 'No follow-up'}</span>
                        <div class="flex space-x-1">
                            <button onclick="editContact('${contact.id}')" class="text-blue-600 hover:text-blue-800">
                                <i class="ri-edit-line"></i>
                            </button>
                            <button onclick="moveContactStage('${contact.id}', 'next')" class="text-green-600 hover:text-green-800">
                                <i class="ri-arrow-right-line"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
        });
    
    if (stageContacts.length > 5) {
        cardsHTML += `<div class="text-center text-sm text-blue-600 cursor-pointer mt-2">+${stageContacts.length - 5} more</div>`;
    }
    
    return cardsHTML;
}

