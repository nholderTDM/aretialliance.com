// Render deliveries
function renderDeliveries() {
    const deliveriesList = document.getElementById('deliveriesList');
    
    // Ensure deliveries is an array
    if (!Array.isArray(deliveries)) {
        console.error('Deliveries is not an array, resetting to empty array');
        deliveries = [];
    }
    
    // Update delivery counts
    updateDeliveryCounts();
    
    if (deliveries.length === 0) {
        deliveriesList.innerHTML = `
            <div class="text-center py-8 text-gray-500">
                No deliveries found. Click "Add Delivery" to create your first delivery.
            </div>
        `;
        return;
    }
    
    // Sort deliveries based on selected sort order
    const sortOrder = document.getElementById('deliverySortOrder')?.value || 'date-desc';
    let sortedDeliveries = [...deliveries];
    
    switch (sortOrder) {
        case 'date-asc':
            sortedDeliveries.sort((a, b) => new Date(a.deliveryDate) - new Date(b.deliveryDate));
            break;
        case 'date-desc':
            sortedDeliveries.sort((a, b) => new Date(b.deliveryDate) - new Date(a.deliveryDate));
            break;
        case 'status':
            sortedDeliveries.sort((a, b) => a.status.localeCompare(b.status));
            break;
        case 'customer':
            sortedDeliveries.sort((a, b) => a.customerName.localeCompare(b.customerName));
            break;
    }
    
    // Create HTML for deliveries
    let html = `<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">`;
    
    sortedDeliveries.forEach(delivery => {
        // Get status styling
        let statusClass = '';
        let statusBg = '';
        
        switch(delivery.status) {
            case 'scheduled':
                statusClass = 'bg-blue-100 text-blue-800';
                statusBg = 'border-blue-200';
                break;
            case 'in-transit':
                statusClass = 'bg-yellow-100 text-yellow-800';
                statusBg = 'border-yellow-200';
                break;
            case 'out-for-delivery':
                statusClass = 'bg-indigo-100 text-indigo-800';
                statusBg = 'border-indigo-200';
                break;
            case 'delivered':
                statusClass = 'bg-green-100 text-green-800';
                statusBg = 'border-green-200';
                break;
            case 'failed':
                statusClass = 'bg-red-100 text-red-800';
                statusBg = 'border-red-200';
                break;
            case 'cancelled':
                statusClass = 'bg-gray-100 text-gray-800';
                statusBg = 'border-gray-200';
                break;
            default:
                statusClass = 'bg-gray-100 text-gray-800';
                statusBg = 'border-gray-200';
        }
        
        // Format delivery date
        const deliveryDate = new Date(delivery.deliveryDate);
        const formattedDate = deliveryDate.toLocaleDateString();
        
        // Format time window
        let timeWindow = '';
        if (delivery.timeStart && delivery.timeEnd) {
            const startTime = new Date(`2000-01-01T${delivery.timeStart}`).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            const endTime = new Date(`2000-01-01T${delivery.timeEnd}`).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            timeWindow = `${startTime} - ${endTime}`;
        }
        
        html += `
            <div class="delivery-card border ${statusBg} rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow" data-id="${delivery.id}" data-status="${delivery.status}">
                <div class="p-4">
                    <div class="flex justify-between items-start mb-3">
                        <div>
                            <h3 class="font-medium">${delivery.customerName}</h3>
                            <p class="text-sm text-gray-500">${delivery.type} Delivery</p>
                        </div>
                        <span class="px-2 py-1 rounded-full text-xs ${statusClass}">
                            ${delivery.status.replace('-', ' ').split(' ').map(word => 
                                word.charAt(0).toUpperCase() + word.slice(1)
                            ).join(' ')}
                        </span>
                    </div>
                    
                    <div class="mb-3">
                        <div class="flex items-center mb-1">
                            <i class="ri-calendar-line text-gray-500 mr-2"></i>
                            <span class="text-sm">${formattedDate}</span>
                            ${timeWindow ? `<span class="text-sm ml-2">(${timeWindow})</span>` : ''}
                        </div>
                        <div class="flex items-center mb-1">
                            <i class="ri-map-pin-line text-gray-500 mr-2"></i>
                            <span class="text-sm truncate">${delivery.deliveryAddress}</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-truck-line text-gray-500 mr-2"></i>
                            <span class="text-sm">${delivery.trackingNumber}</span>
                        </div>
                    </div>
                    
                    <div class="flex justify-between">
                        <button onclick="viewDelivery('${delivery.id}')" class="text-blue-600 hover:text-blue-800 text-sm">
                            View Details
                        </button>
                        <div>
                            <button onclick="editDelivery('${delivery.id}')" class="text-indigo-600 hover:text-indigo-800 mr-2">
                                <i class="ri-edit-line"></i>
                            </button>
                            <button onclick="deleteDelivery('${delivery.id}')" class="text-red-600 hover:text-red-800">
                                <i class="ri-delete-bin-line"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        `;
    });
    
    html += `</div>`;
    deliveriesList.innerHTML = html;
    
    // Apply any active filter
    const activeStatusTab = document.querySelector('.delivery-status-tab.active');
    if (activeStatusTab) {
        const status = activeStatusTab.getAttribute('data-status');
        if (status) {
            filterDeliveriesByStatus(status);
        }
    }
}

// Update delivery counts
function updateDeliveryCounts() {
    // Count deliveries by status
    const counts = {
        all: deliveries.length,
        scheduled: 0,
        'in-transit': 0,
        delivered: 0,
        issue: 0
    };
    
    deliveries.forEach(delivery => {
        if (counts.hasOwnProperty(delivery.status)) {
            counts[delivery.status]++;
        } else if (delivery.status === 'failed' || delivery.status === 'cancelled') {
            counts.issue++;
        }
    });
    
    // Update count badges
    Object.keys(counts).forEach(status => {
        const countElement = document.querySelector(`.delivery-count-${status}`);
        if (countElement) {
            countElement.textContent = counts[status];
        }
    });
}

