    const packages = [];
    const packageRows = document.querySelectorAll('#packageTableBody tr');
    
    packageRows.forEach(row => {
        const packageType = row.querySelector('.package-type').value;
        const quantity = parseInt(row.querySelector('.package-quantity').value) || 1;
        const weight = parseFloat(row.querySelector('.package-weight').value) || 0;
        const dimensions = row.querySelector('.package-dimensions').value || '';
        
