                                                    <option value="2">Sales Rep 1</option>
                                                    <option value="3">Sales Rep 2</option>
                                                </select>
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                                    Budget Range
                                                </label>
                                                <select
                                                    id="contactBudgetRange"
                                                    class="w-full px-3 py-2 border rounded"
                                                >
                                                    <option value="">Unknown</option>
                                                    <option value="low">Low ($0-1,000)</option>
                                                    <option value="medium">Medium ($1,000-10,000)</option>
                                                    <option value="high">High ($10,000+)</option>
                                                </select>
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                                    Delivery Timeframe
                                                </label>
                                                <select
                                                    id="contactTimeframe"
                                                    class="w-full px-3 py-2 border rounded"
                                                >
                                                    <option value="">Unknown</option>
                                                    <option value="immediate">Immediate</option>
                                                    <option value="1-week">Within 1 Week</option>
                                                    <option value="1-month">Within 1 Month</option>
                                                    <option value="3-month">Next 3 Months</option>
                                                    <option value="long-term">Long Term</option>
                                                </select>
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                                    Service Interest
                                                </label>
                                                <select
                                                    id="contactServiceInterest"
                                                    class="w-full px-3 py-2 border rounded"
                                                >
                                                    <option value="">Unknown</option>
                                                    <option value="standard">Standard Delivery</option>
                                                    <option value="same-day">Same Day Delivery</option>
                                                    <option value="ecommerce">E-commerce Fulfillment</option>
                                                    <option value="logistics">Full Logistics Solution</option>
                                                    <option value="route">Route Optimization</option>
                                                    <option value="other">Other Services</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Relationships Content -->
                                    <div id="relationships" class="contact-tab-content hidden">
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                                    Company / Organization
                                                </label>
                                                <select
                                                    id="contactOrganization"
                                                    class="w-full px-3 py-2 border rounded"
                                                >
                                                    <option value="">None/Individual</option>
                                                    <!-- Organizations will be populated dynamically -->
                                                </select>
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                                    Position / Job Title
                                                </label>
                                                <input
                                                    type="text"
                                                    id="contactJobTitle"
                                                    class="w-full px-3 py-2 border rounded"
                                                />
                                            </div>
                                        </div>
                                        
                                        <div class="mb-4">
                                            <div class="flex justify-between items-center mb-2">
                                                <label class="block text-sm font-medium text-gray-700">
                                                    Related Tasks
                                                </label>
                                                <button 
                                                    type="button" 
                                                    id="createRelatedTaskBtn"
                                                    class="text-xs px-2 py-1 bg-blue-600 text-white rounded"
                                                >
                                                    Create Task
                                                </button>
                                            </div>
                                            <div id="relatedTasksList" class="border rounded p-3 bg-white">
                                                <p class="text-gray-500 text-sm">No related tasks</p>
                                                <!-- Tasks will be populated dynamically -->
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="flex justify-end space-x-2">
                                        <button
                                            type="button"
                                            id="cancelContactBtn"
                                            class="px-4 py-2 border text-gray-700 rounded hover:bg-gray-100"
                                        >
                                            Cancel
                                        </button>
                                        <button
                                            type="button"
                                            id="saveContactBtn"
                                            class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"
                                        >
                                            Save
                                        </button>
                                    </div>
                                </div>
                                
                                <div id="contactsList">
                                    <div class="text-center py-8 text-gray-500">
                                        No contacts found. Click "Add Contact" to create your first contact.
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Organizations Tab -->
                        <div id="organizations" class="tab-content">
                            <div class="bg-white p-6 rounded-lg shadow">
                                <div class="flex justify-between items-center mb-6">
                                    <h2 class="text-xl font-semibold">Organizations</h2>
                                    <button id="addOrgBtn" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                                        Add Organization
                                    </button>
                                </div>
                                
                                <div id="orgForm" class="hidden mb-6 bg-gray-50 p-4 rounded border">
                                    <h3 class="text-lg font-medium mb-4">Add New Organization</h3>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                                Name *
                                            </label>
                                            <input
                                                type="text"
                                                id="orgName"
                                                required
                                                class="w-full px-3 py-2 border rounded"
                                            />
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                                Industry
                                            </label>
                                            <input
                                                type="text"
                                                id="orgIndustry"
                                                class="w-full px-3 py-2 border rounded"
                                            />
