                                <h2 class="text-xl font-semibold mb-4">Dashboard Overview</h2>
                                <p>Welcome to the Areti Alliance CRM dashboard. You are logged in as: <span id="userRoleOverview" class="font-semibold">Admin</span></p>
                            </div>
                            
                            <!-- Summary Cards -->
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                                <div class="bg-white p-4 rounded-lg shadow">
                                    <div class="text-sm font-medium text-gray-500">Total Contacts</div>
                                    <div class="mt-1 text-3xl font-semibold">0</div>
                                </div>
                                <div class="bg-white p-4 rounded-lg shadow">
                                    <div class="text-sm font-medium text-gray-500">Total Organizations</div>
                                    <div class="mt-1 text-3xl font-semibold">0</div>
                                </div>
                                <div class="bg-white p-4 rounded-lg shadow">
                                    <div class="text-sm font-medium text-gray-500">Tasks Overview</div>
                                    <div class="mt-3 space-y-2">
                                        <div class="flex justify-between">
                                            <span class="text-sm">Pending</span>
                                            <span class="font-medium">0</span>
                                        </div>
                                        <div class="flex justify-between">
                                            <span class="text-sm">In Progress</span>
                                            <span class="font-medium">0</span>
                                        </div>
                                        <div class="flex justify-between">
                                            <span class="text-sm">Completed</span>
                                            <span class="font-medium">0</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
