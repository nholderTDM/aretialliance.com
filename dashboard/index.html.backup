 // Render deliveries list
function renderDeliveries() {
    const container = document.getElementById('deliveriesList');
    const deliveries = JSON.parse(localStorage.getItem('deliveries') || '[]');
    
    if (deliveries.length === 0) {
        container.innerHTML = `
            <div class="text-center py-8 text-gray-500">
                No deliveries found. Click "Add Delivery" to create your first delivery.
            </div>
        `;
        return;
    }
    
    // Create cards for each delivery
    let html = '<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">';
    
    deliveries.forEach(delivery => {
        // Determine status badge color
        let statusClass = '';
        switch(delivery.status) {
            case 'scheduled':
                statusClass = 'bg-blue-100 text-blue-800';
                break;
            case 'in-transit':
                statusClass = 'bg-yellow-100 text-yellow-800';
                break;
            case 'out-for-delivery':
                statusClass = 'bg-purple-100 text-purple-800';
                break;
            case 'delivered':
                statusClass = 'bg-green-100 text-green-800';
                break;
            case 'failed':
                statusClass = 'bg-red-100 text-red-800';
                break;
            case 'cancelled':
                statusClass = 'bg-gray-100 text-gray-800';
                break;
            default:
                statusClass = 'bg-gray-100 text-gray-800';
        }
        
        // Format the customer name
        let customerName = 'Unknown Customer';
        if (delivery.customerId) {
            if (delivery.customerId.startsWith('org_')) {
                const orgId = delivery.customerId.replace('org_', '');
                const organizations = JSON.parse(localStorage.getItem('organizations') || '[]');
                const org = organizations.find(o => o.id === orgId);
                if (org) customerName = org.name;
            } else if (delivery.customerId.startsWith('contact_')) {
                const contactId = delivery.customerId.replace('contact_', '');
                const contacts = JSON.parse(localStorage.getItem('contacts') || '[]');
                const contact = contacts.find(c => c.id === contactId);
                if (contact) customerName = contact.name;
            }
        }
        
        html += `
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="p-4 border-b">
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="font-semibold text-gray-800">${customerName}</h3>
                            <p class="text-sm text-gray-500">${delivery.trackingNumber}</p>
                        </div>
                        <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full ${statusClass}">
                            ${delivery.status.charAt(0).toUpperCase() + delivery.status.slice(1).replace('-', ' ')}
                        </span>
                    </div>
                </div>
                <div class="p-4">
                    <div class="mb-3">
                        <div class="flex items-center text-sm mb-1">
                            <i class="ri-calendar-line text-gray-500 mr-2"></i>
                            <span>${new Date(delivery.date).toLocaleDateString()}</span>
                            ${delivery.timeStart ? ` (${delivery.timeStart}-${delivery.timeEnd})` : ''}
                        </div>
                        <div class="flex items-center text-sm mb-1">
                            <i class="ri-map-pin-line text-gray-500 mr-2"></i>
                            <span>${delivery.deliveryAddress ? `${delivery.deliveryAddress.street}, ${delivery.deliveryAddress.city}` : 'No address'}</span>
                        </div>
                    </div>
                    <div class="flex justify-between items-center mt-4">
                        <button onclick="viewDeliveryDetails('${delivery.id}')" class="text-sm text-blue-600 hover:text-blue-800">
                            View Details
                        </button>
                        <div>
                            <button onclick="editDelivery('${delivery.id}')" class="text-blue-600 hover:text-blue-800 mx-2">
                                <i class="ri-edit-line"></i>
                            </button>
                            <button onclick="deleteDelivery('${delivery.id}')" class="text-red-600 hover:text-red-800">
                                <i class="ri-delete-bin-line"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        `;
    });
    
    html += '</div>';
    container.innerHTML = html;
} 

// Edit a delivery
window.editDelivery = function(id) {
    const deliveries = JSON.parse(localStorage.getItem('deliveries') || '[]');
    const delivery = deliveries.find(d => d.id === id);
    
    if (!delivery) {
        alert('Delivery not found');
        return;
    }
    
    // Populate form with delivery data
    document.getElementById('deliveryId').value = delivery.id;
    document.getElementById('deliveryType').value = delivery.type || '';
    document.getElementById('deliveryCustomer').value = delivery.customerId || '';
    document.getElementById('deliveryDate').value = delivery.date || '';
    document.getElementById('deliveryTimeStart').value = delivery.timeStart || '';
    document.getElementById('deliveryTimeEnd').value = delivery.timeEnd || '';
    document.getElementById('deliveryInstructions').value = delivery.instructions || '';
    
    // Populate address fields
    if (delivery.pickupAddress) {
        document.getElementById('pickupAddress').value = delivery.pickupAddress.street || '';
        document.getElementById('pickupCity').value = delivery.pickupAddress.city || '';
        document.getElementById('pickupState').value = delivery.pickupAddress.state || '';
        document.getElementById('pickupZip').value = delivery.pickupAddress.zip || '';
    }
    
    if (delivery.deliveryAddress) {
        document.getElementById('deliveryAddress').value = delivery.deliveryAddress.street || '';
        document.getElementById('deliveryCity').value = delivery.deliveryAddress.city || '';
        document.getElementById('deliveryState').value = delivery.deliveryAddress.state || '';
        document.getElementById('deliveryZip').value = delivery.deliveryAddress.zip || '';
    }
    
    // Populate tracking tab
    document.getElementById('deliveryStatus').value = delivery.status || 'scheduled';
    document.getElementById('trackingNumber').value = delivery.trackingNumber || '';
    
    if (delivery.signatureRequired) {
        document.querySelector('input[name="signatureRequired"][value="yes"]').checked = true;
    } else {
        document.querySelector('input[name="signatureRequired"][value="no"]').checked = true;
    }
    
    document.getElementById('deliveryNotes').value = delivery.notes || '';
    
    // Populate dropdowns
    populateCustomersDropdown();
    populateDriversDropdown();
    
    // Update contact dropdown based on customer
    updateContactsDropdown();
    document.getElementById('deliveryContact').value = delivery.contactId || '';
    
    // Show the form
    document.getElementById('deliveryForm').classList.remove('hidden');
    document.getElementById('deliveryManagementTools').classList.add('hidden');
    document.getElementById('deliveriesList').classList.add('hidden');
    
    // Set form title
    document.getElementById('deliveryFormTitle').textContent = 'Edit Delivery';
    
    // Initialize tabs
    initDeliveryFormTabs();
};

