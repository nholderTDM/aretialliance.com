                    <div class="w-16 h-16 bg-blue-800 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="text-white font-bold text-2xl">A</span>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900">Areti Alliance CRM</h2>
                    <p class="text-gray-600">Sign in to your account</p>
                </div>
                
                <div id="errorAlert" class="hidden bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
                    Invalid username or password
                </div>
                
                <div class="space-y-4">
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
                        <input type="text" id="username" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                        <div class="password-container mt-1 relative">
                            <input type="password" id="password" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                            <i id="passwordToggle" class="password-toggle ri-eye-off-line"></i>
                        </div>
                    </div>
                    
                    <button id="loginBtn" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Sign in
                    </button>
                </div>
            </div>
            
            <!-- Dashboard Content -->
            <div id="dashboardContent" class="hidden">
                <div class="flex flex-col md:flex-row gap-6">
                    <!-- Sidebar Navigation -->
                    <div class="w-full md:w-64 bg-white rounded-lg shadow-md p-4">
                        <h3 class="text-lg font-semibold mb-4 text-gray-700 pb-2 border-b">Main Menu</h3>
                        <nav class="space-y-2">
                            <a href="#" data-tab="overview" class="tab-link flex items-center p-2 text-gray-700 rounded hover:bg-blue-50 hover:text-blue-700 w-full">
                                <i class="ri-dashboard-line mr-2"></i> Overview
                            </a>
                            <a href="#" data-tab="contacts" class="tab-link flex items-center p-2 text-gray-700 rounded hover:bg-blue-50 hover:text-blue-700 w-full">
                                <i class="ri-user-line mr-2"></i> Contacts
                            </a>
                            <a href="#" data-tab="organizations" class="tab-link flex items-center p-2 text-gray-700 rounded hover:bg-blue-50 hover:text-blue-700 w-full">
                                <i class="ri-building-line mr-2"></i> Organizations
                            </a>
                            <a href="#" data-tab="tasks" class="tab-link flex items-center p-2 text-gray-700 rounded hover:bg-blue-50 hover:text-blue-700 w-full">
                                <i class="ri-task-line mr-2"></i> Tasks
                            </a>
                            <a href="#" data-tab="deliveries" class="tab-link flex items-center p-2 text-gray-700 rounded hover:bg-blue-50 hover:text-blue-700 w-full">
                                <i class="ri-truck-line mr-2"></i> Deliveries
                            </a>
                            <a href="#" data-tab="drivers" class="tab-link flex items-center p-2 text-gray-700 rounded hover:bg-blue-50 hover:text-blue-700 w-full">
                                <i class="ri-user-star-line mr-2"></i> Drivers
                            </a>
                            <a href="#" data-tab="routes" class="tab-link flex items-center p-2 text-gray-700 rounded hover:bg-blue-50 hover:text-blue-700 w-full">
                                <i class="ri-route-line mr-2"></i> Routes
                            </a>
                            <a href="#" data-tab="quotes" class="tab-link flex items-center p-2 text-gray-700 rounded hover:bg-blue-50 hover:text-blue-700 w-full">
                                <i class="ri-file-list-3-line mr-2"></i> Quotes
                            </a>
                            <a href="#" data-tab="performance" class="tab-link flex items-center p-2 text-gray-700 rounded hover:bg-blue-50 hover:text-blue-700 w-full">
                                <i class="ri-line-chart-line mr-2"></i> Performance
                            </a>
                            <a href="#" data-tab="revenue" class="tab-link flex items-center p-2 text-gray-700 rounded hover:bg-blue-50 hover:text-blue-700 w-full">
                                <i class="ri-money-dollar-circle-line mr-2"></i> Revenue
                            </a>
                            <a href="#" data-tab="settings" class="tab-link flex items-center p-2 text-gray-700 rounded hover:bg-blue-50 hover:text-blue-700 w-full">
                                <i class="ri-settings-line mr-2"></i> Settings
                            </a>
                        </nav>
                    </div>
                    
                    <!-- Main Content Area -->
                    <div class="flex-1">
                        <!-- Overview Tab -->
                        <div id="overview" class="tab-content active">
