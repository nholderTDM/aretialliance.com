// Add event listener for the "Save Delivery" button
document.getElementById('saveDeliveryBtn').addEventListener('click', function() {
    // Validate required fields
    const requiredFields = [
        'deliveryType', 'deliveryCustomer', 'deliveryDate',
        'pickupAddress', 'pickupCity', 'pickupState', 'pickupZip',
        'deliveryAddress', 'deliveryCity', 'deliveryState', 'deliveryZip'
    ];
    
    let isValid = true;
    requiredFields.forEach(field => {
        const input = document.getElementById(field);
        if (input && !input.value) {
            input.classList.add('border-red-500');
            isValid = false;
        } else if (input) {
            input.classList.remove('border-red-500');
        }
    });
    
    if (!isValid) {
        alert('Please fill in all required fields');
        return;
    }
    
    // Get values from form
    const deliveryId = document.getElementById('deliveryId').value;
    
    const deliveryData = {
        id: deliveryId,
        type: document.getElementById('deliveryType').value,
        customerId: document.getElementById('deliveryCustomer').value,
        contactId: document.getElementById('deliveryContact').value,
        date: document.getElementById('deliveryDate').value,
        timeStart: document.getElementById('deliveryTimeStart').value,
        timeEnd: document.getElementById('deliveryTimeEnd').value,
        instructions: document.getElementById('deliveryInstructions').value,
        pickupAddress: {
            street: document.getElementById('pickupAddress').value,
            city: document.getElementById('pickupCity').value,
            state: document.getElementById('pickupState').value,
            zip: document.getElementById('pickupZip').value
        },
        deliveryAddress: {
            street: document.getElementById('deliveryAddress').value,
            city: document.getElementById('deliveryCity').value,
            state: document.getElementById('deliveryState').value,
            zip: document.getElementById('deliveryZip').value
        },
        status: document.getElementById('deliveryStatus').value,
        driverId: document.getElementById('assignedDriver').value,
        trackingNumber: document.getElementById('trackingNumber').value,
        signatureRequired: document.querySelector('input[name="signatureRequired"]:checked').value === 'yes',
        notes: document.getElementById('deliveryNotes').value,
        updatedAt: new Date().toISOString()
    };
    
    // Save the delivery to localStorage
    let deliveries = JSON.parse(localStorage.getItem('deliveries') || '[]');
    
    // Check if this is a new delivery or updating an existing one
    const existingIndex = deliveries.findIndex(d => d.id === deliveryId);
    
    if (existingIndex >= 0) {
        // Update existing delivery
        deliveries[existingIndex] = {
            ...deliveries[existingIndex],
            ...deliveryData
        };
    } else {
        // Add created timestamp for new deliveries
        deliveryData.createdAt = new Date().toISOString();
        // Add to deliveries array
        deliveries.push(deliveryData);
    }
    
    // Save to localStorage
    localStorage.setItem('deliveries', JSON.stringify(deliveries));
    
    // Update the UI
    renderDeliveries();
    
    // Hide form
    document.getElementById('deliveryForm').classList.add('hidden');
    
    // Show the management tools and list
    document.getElementById('deliveryManagementTools').classList.remove('hidden');
    document.getElementById('deliveriesList').classList.remove('hidden');
    
    // Show success message
    alert('Delivery saved successfully!');
});
// Initialize delivery form tabs
function initDeliveryFormTabs() {
    const tabLinks = document.querySelectorAll('.delivery-tab-link');
    const tabContents = document.querySelectorAll('.delivery-tab-content');
    
    tabLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Remove active class from all tabs and contents
            tabLinks.forEach(tab => {
                tab.classList.remove('active', 'border-blue-600', 'text-blue-600');
                tab.classList.add('border-transparent', 'hover:text-gray-600', 'hover:border-gray-300');
            });
            
            tabContents.forEach(content => {
                content.classList.add('hidden');
            });
            
            // Add active class to current tab and show content
            this.classList.add('active', 'border-blue-600', 'text-blue-600');
            this.classList.remove('border-transparent', 'hover:text-gray-600', 'hover:border-gray-300');
            
            const tabId = this.getAttribute('data-tab');
            const tabContent = document.getElementById(tabId);
            if (tabContent) {
                tabContent.classList.remove('hidden');
            }
        });
    });
}
