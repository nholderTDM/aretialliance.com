// Display related tasks
function displayRelatedTasks(contact) {
    const relatedTasksList = document.getElementById('relatedTasksList');
    if (!relatedTasksList) return;
    
    if (!contact.relatedTasks || contact.relatedTasks.length === 0) {
        relatedTasksList.innerHTML = '<p class="text-gray-500 text-sm">No related tasks</p>';
        return;
    }
    
    let html = '';
    
    // Get tasks that are related to this contact
    const contactTasks = tasks.filter(task => 
        task.contactId === contact.id || 
        (contact.relatedTasks && contact.relatedTasks.includes(task.id))
    );
    
    if (contactTasks.length === 0) {
        relatedTasksList.innerHTML = '<p class="text-gray-500 text-sm">No related tasks</p>';
        return;
    }
    
    html = '<ul class="divide-y divide-gray-200">';
    
    contactTasks.forEach(task => {
        let statusClass = '';
        switch(task.status) {
            case 'completed':
                statusClass = 'bg-green-100 text-green-800';
                break;
            case 'in-progress':
                statusClass = 'bg-blue-100 text-blue-800';
                break;
            case 'pending':
                statusClass = 'bg-yellow-100 text-yellow-800';
                break;
            default:
                statusClass = 'bg-gray-100 text-gray-800';
        }
        
        html += `
            <li class="py-2">
                <div class="flex justify-between">
                    <div>
                        <span class="font-medium">${task.title}</span>
                        <span class="ml-2 px-2 py-1 text-xs rounded ${statusClass}">
                            ${task.status.replace('-', ' ').split(' ').map(word => 
                                word.charAt(0).toUpperCase() + word.slice(1)
                            ).join(' ')}
                        </span>
                    </div>
                    <div>
                        ${task.dueDate ? new Date(task.dueDate).toLocaleDateString() : 'No date'}
                    </div>
                </div>
                ${task.description ? `<p class="text-sm text-gray-600 mt-1">${task.description}</p>` : ''}
            </li>
        `;
    });
    
    html += '</ul>';
    relatedTasksList.innerHTML = html;
}

