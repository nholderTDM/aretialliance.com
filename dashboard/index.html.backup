// Filter contacts based on view mode and search
function filterContacts() {
    const viewMode = document.getElementById('contactViewMode').value;
    const searchTerm = document.getElementById('contactSearch').value.toLowerCase();
    
    // Show/hide relevant rows in the table
    const rows = document.querySelectorAll('#contactsList table tbody tr');
    
    rows.forEach(row => {
        const contact = contacts.find(c => c.id === row.getAttribute('data-id'));
        if (!contact) return;
        
        let statusMatch = true;
        if (viewMode === 'leads') {
            statusMatch = ['lead', 'prospect', 'qualified'].includes(contact.status);
        } else if (viewMode === 'opportunities') {
            statusMatch = ['opportunity', 'proposal', 'negotiation'].includes(contact.status);
        } else if (viewMode === 'customers') {
            statusMatch = contact.status === 'customer';
        } else if (viewMode === 'other') {
            statusMatch = ['partner', 'lost', 'inactive'].includes(contact.status);
        }
        
        const searchMatch = 
            contact.name.toLowerCase().includes(searchTerm) ||
            contact.email.toLowerCase().includes(searchTerm) ||
            (contact.company && contact.company.toLowerCase().includes(searchTerm)) ||
            (contact.tags && contact.tags.some(tag => tag.toLowerCase().includes(searchTerm)));
        
        if (statusMatch && searchMatch) {
            row.classList.remove('hidden');
        } else {
            row.classList.add('hidden');
        }
    });
    
    // Also update the pipeline view if needed
    updatePipelineVisibility(viewMode);
}

// Update pipeline visibility based on view mode
function updatePipelineVisibility(viewMode) {
    const pipelineEl = document.getElementById('leadPipeline');
    if (!pipelineEl) return;
    
    if (viewMode === 'all' || viewMode === 'leads' || viewMode === 'opportunities') {
        pipelineEl.classList.remove('hidden');
    } else {
        pipelineEl.classList.add('hidden');
    }
}

// Sort contacts based on selected sort order
function sortContacts() {
    const sortOrder = document.getElementById('contactSortOrder').value;
    
    // Re-render the table with sorted contacts
    let sortedContacts = [...contacts];
    
    switch (sortOrder) {
        case 'name':
            sortedContacts.sort((a, b) => a.name.localeCompare(b.name));
            break;
        case 'recent':
            sortedContacts.sort((a, b) => new Date(b.updatedAt) - new Date(a.updatedAt));
            break;
        case 'score':
            sortedContacts.sort((a, b) => (b.leadScore || 0) - (a.leadScore || 0));
            break;
        case 'followup':
            sortedContacts.sort((a, b) => {
                if (!a.nextFollowUpDate && !b.nextFollowUpDate) return 0;
                if (!a.nextFollowUpDate) return 1;
                if (!b.nextFollowUpDate) return -1;
