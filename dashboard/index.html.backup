    // Function to add a new package row
    function addPackageRow() {
        const packageTableBody = document.getElementById('packageTableBody');
        if (!packageTableBody) return;
        
        const row = document.createElement('tr');
        row.innerHTML = `
            <td class="py-2">
                <select class="w-full px-2 py-1 border rounded package-type">
                    <option value="envelope">Envelope</option>
                    <option value="small-box">Small Box</option>
                    <option value="medium-box">Medium Box</option>
