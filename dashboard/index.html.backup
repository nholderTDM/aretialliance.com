                <button type="button" class="text-red-600 hover:text-red-800 remove-package">
                    <i class="ri-delete-bin-line"></i>
                </button>
            </td>
        `;
        
        // Add event listener for remove button
        const removeBtn = row.querySelector('.remove-package');
        removeBtn.addEventListener('click', function() {
