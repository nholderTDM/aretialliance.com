// Calculate lead score automatically
function calculateLeadScore(contact) {
    let score = 0;
    
    // Status-based score
    const statusScores = {
        'lead': 10,
        'prospect': 20,
        'qualified': 40,
        'opportunity': 60,
        'proposal': 70,
        'negotiation': 80,
        'customer': 100,
        'partner': 90,
        'lost': 0,
        'inactive': 5
    };
    
    score += statusScores[contact.status] || 0;
    
    // Completeness score (up to 20 points)
    let completeness = 0;
    if (contact.name) completeness += 3;
    if (contact.email) completeness += 3;
    if (contact.phone) completeness += 2;
    if (contact.company) completeness += 2;
    if (contact.leadSource) completeness += 2;
    if (contact.nextFollowUpDate) completeness += 3;
    if (contact.notes && contact.notes.length > 10) completeness += 2;
    if (contact.tags && contact.tags.length > 0) completeness += 3;
    
    score += Math.min(completeness, 20);
    
    // Engagement score (up to 20 points)
    let engagement = 0;
    
    // Count related tasks
    if (contact.relatedTasks) {
        engagement += Math.min(contact.relatedTasks.length * 4, 12);
    }
    
    // Recent contact
    if (contact.lastContactDate) {
        const daysSinceContact = Math.floor((new Date() - new Date(contact.lastContactDate)) / (1000 * 60 * 60 * 24));
        if (daysSinceContact < 7) {
            engagement += 8;
        } else if (daysSinceContact < 30) {
            engagement += 4;
        }
    }
    
    score += Math.min(engagement, 20);
    
    // Return capped score
    return Math.min(Math.max(Math.round(score), 0), 100);
}

// Move contact between stages
function moveContactStage(contactId, direction) {
    const contact = contacts.find(c => c.id === contactId);
    if (!contact) return;
    
    const stages = [
        'lead',
        'prospect',
        'qualified',
        'opportunity',
        'proposal', 
        'negotiation',
        'customer',
        'lost'
    ];
    
    const currentIndex = stages.indexOf(contact.status);
    if (currentIndex === -1) return;
    
    let newIndex;
    if (direction === 'next') {
        newIndex = Math.min(currentIndex + 1, stages.length - 1);
    } else if (direction === 'prev') {
        newIndex = Math.max(currentIndex - 1, 0);
    } else if (typeof direction === 'number') {
        newIndex = Math.max(0, Math.min(direction, stages.length - 1));
    } else {
        return;
    }
    
    // If stage is actually changing
    if (newIndex !== currentIndex) {
        const oldStatus = contact.status;
        const newStatus = stages[newIndex];
        
        // Update the contact's status
        contact.status = newStatus;
        contact.updatedAt = new Date().toISOString();
        
        // Record the timestamp for this stage change
        if (!contact.stageTimestamps) {
            contact.stageTimestamps = {};
        }
        contact.stageTimestamps[newStatus] = new Date().toISOString();
        
        // If moving to 'customer' stage, add to customers if not already there
        if (newStatus === 'customer' && !contact.isCustomer) {
            contact.isCustomer = true;
            contact.conversionDate = new Date().toISOString();
            
            // Maybe create a task for onboarding
            createTask({
                title: `Onboard new customer: ${contact.name}`,
                description: `Follow up with ${contact.name} to ensure successful onboarding.`,
                priority: 'high',
                status: 'pending',
                dueDate: new Date(Date.now() + 2 * 24 * 60 * 60 * 1000).toISOString(), // 2 days from now
                contactId: contact.id
            });
        }
        
        // Recalculate lead score
        contact.leadScore = calculateLeadScore(contact);
        
        // Create a task for this stage change
        createTask({
            title: `${contact.name} moved from ${oldStatus} to ${newStatus}`,
            description: `Follow up with ${contact.name} regarding their progression to the ${newStatus} stage.`,
            priority: 'medium',
            status: 'pending',
            dueDate: new Date(Date.now() + 24 * 60 * 60 * 1000).toISOString(), // 1 day from now
            contactId: contact.id
        });
        
        // Save data and refresh the UI
        saveDataToLocalStorage();
        renderContacts();
    }
}

