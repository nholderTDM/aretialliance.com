// Calculate lead stats for reporting
function calculateLeadStats() {
    // Default values in case of empty data
    const defaultStats = {
        activeLeads: 0,
        leadChange: 0,
        conversionRate: 0,
        avgLeadScore: 0,
        leadScoreChange: 0,
        sourceBreakdown: {
            website: 0,
            referral: 0,
            social: 0,
            other: 0
        },
        funnelData: {
            lead: 0,
            qualified: 0,
            opportunity: 0,
            customer: 0
        }
    };
    
    // Ensure contacts is an array
    if (!Array.isArray(contacts) || contacts.length === 0) {
        return defaultStats;
    }
    
    // Calculate active leads (lead, prospect, qualified)
    const activeLeads = contacts.filter(c => 
        ['lead', 'prospect', 'qualified'].includes(c.status)
    ).length;
    
    // Calculate conversion rate (customers / total leads created in last 90 days)
    const ninetyDaysAgo = new Date();
    ninetyDaysAgo.setDate(ninetyDaysAgo.getDate() - 90);
    
    const recentLeadsCreated = contacts.filter(c => 
        new Date(c.createdAt) >= ninetyDaysAgo
    ).length;
    
    const recentCustomersConverted = contacts.filter(c => 
        c.status === 'customer' && 
        c.stageTimestamps && 
        c.stageTimestamps.customer &&
        new Date(c.stageTimestamps.customer) >= ninetyDaysAgo
    ).length;
    
    const conversionRate = recentLeadsCreated > 0 
        ? Math.round((recentCustomersConverted / recentLeadsCreated) * 100) 
        : 0;
    
    // Calculate average lead score
    const leadScores = contacts
        .filter(c => c.leadScore !== undefined && c.leadScore !== null)
        .map(c => c.leadScore);
    
    const avgLeadScore = leadScores.length > 0 
        ? Math.round(leadScores.reduce((sum, score) => sum + score, 0) / leadScores.length) 
        : 0;
    
    // Calculate source breakdown
    const sourceBreakdown = {
        website: 0,
        referral: 0,
        social: 0,
        other: 0
    };
    
    contacts.forEach(contact => {
        if (contact.leadSource) {
            if (['website', 'referral', 'social'].includes(contact.leadSource)) {
                sourceBreakdown[contact.leadSource]++;
            } else {
                sourceBreakdown.other++;
            }
        } else {
            sourceBreakdown.other++;
        }
    });
    
    // Calculate funnel data
    const funnelData = {
        lead: contacts.filter(c => c.status === 'lead').length,
        qualified: contacts.filter(c => c.status === 'qualified').length,
        opportunity: contacts.filter(c => ['opportunity', 'proposal', 'negotiation'].includes(c.status)).length,
        customer: contacts.filter(c => c.status === 'customer').length
    };
    
    // Calculate mock change metrics (random for demo)
    const leadChange = Math.floor(Math.random() * 20) - 5; // Between -5 and +15
    const leadScoreChange = Math.floor(Math.random() * 10) - 2; // Between -2 and +8
    
    return {
        activeLeads,
        leadChange,
        conversionRate,
        avgLeadScore,
        leadScoreChange,
        sourceBreakdown,
        funnelData
    };
}

// Render lead source bars
function renderLeadSourceBars(sourceData) {
    const total = Object.values(sourceData).reduce((sum, count) => sum + count, 0);
    if (total === 0) return '<div class="text-gray-400">No lead source data</div>';
    
    const colors = {
        website: 'bg-blue-500',
        referral: 'bg-green-500',
        social: 'bg-purple-500',
        other: 'bg-gray-500'
    };
    
    return Object.entries(sourceData).map(([source, count]) => {
        const percentage = Math.round((count / total) * 100);
        return `
            <div class="${colors[source]} h-4" style="width: ${percentage}%" title="${source}: ${count} (${percentage}%)"></div>
        `;
    }).join('');
}

// Render lead funnel
function renderLeadFunnel(funnelData) {
    // Calculate percentages based on leads
    const initial = funnelData.lead + funnelData.qualified + funnelData.opportunity + funnelData.customer;
    if (initial === 0) return '<div class="text-gray-400">No funnel data</div>';
    
    const qualifiedPct = Math.round(((funnelData.qualified + funnelData.opportunity + funnelData.customer) / initial) * 100);
    const opportunityPct = Math.round(((funnelData.opportunity + funnelData.customer) / initial) * 100);
    const customerPct = Math.round((funnelData.customer / initial) * 100);
    
    return `
        <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-200">
            <div style="width: 100%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-500">
                <div style="width: ${qualifiedPct}%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-600">
                    <div style="width: ${opportunityPct}%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-700">
                        <div style="width: ${customerPct}%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-800"></div>
